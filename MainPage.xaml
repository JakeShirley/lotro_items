<Page
    x:Class="lotro_items.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:lotro_items"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="txtUrl" HorizontalAlignment="Left" Margin="87,46,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="60" Width="520" TextChanged="txtUrl_TextChanged"/>
        <StackPanel x:Name="stackPanelItems" HorizontalAlignment="Left" Height="278" Margin="87,178,0,0" VerticalAlignment="Top" Width="382" Orientation="Horizontal">
            <TextBox x:Name="txtDebugInfo" HorizontalAlignment="Stretch" Margin="0,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch" IsReadOnly="True" Width="239"/>
            <Image x:Name="imgIcon" HorizontalAlignment="Right" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="100"/>

        </StackPanel>
        <TextBlock x:Name="txtDebugStats" HorizontalAlignment="Left" Margin="715,46,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="60" Width="282"/>

    </Grid>
</Page>
